<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.juanpineda.meli.ui.main.viewmodel.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.view.MainActivity">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/editTextFindProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="@string/product_main_search_label"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewRecentProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:gravity="center"
            android:text="@string/product_main_local_title"
            style="@style/Text2.Normal.Bold"
            app:uiContent="@{ viewModel.model }"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextFindProduct" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:uiContent="@{ viewModel.model  }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/textViewRecentProducts"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSearching"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:visibility="invisible"
            app:uiSearching="@{ viewModel.model  }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/editTextFindProduct"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:uiLoading="@{ viewModel.model  }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_main_empty_products"
            style="@style/Text2.Large.Bold"
            android:gravity="center"
            tools:visibility="gone"
            app:uiNoData="@{ viewModel.model  }"
            android:drawableBottom="@drawable/layer_empty_state"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextFindProduct" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
