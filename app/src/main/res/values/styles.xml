<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.DarkOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Text2">
        <item name="android:fontFamily">@font/gilroy</item>
    </style>
    <style name="Text2.Large">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text2.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text2.Normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text2.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text2.Small.Bold">
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Text2.Normal.Bold">
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Text2.Medium.Bold">
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Text2.Large.Bold">
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>
</resources>
